<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeaderText">
        <item name="android:textSize">36sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="FootballText" parent="HeaderText">
          <item name="android:textColor">@color/gold</item>
    </style>

    <style name="FootballDown" parent="FootballText">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="CenteredButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="FootballButton" parent="CenteredButton">
        <item name="android:layout_width">140dp</item>
        <item name="background">@color/brown</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:background">@color/brown</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>